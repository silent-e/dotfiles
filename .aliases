alias be='bundle exec'
alias ctags="`brew --prefix`/bin/ctags"
alias gr='gitresethard'
alias histblock='export HISTIGNORE="*"'
alias histunblock='unset HISTIGNORE'
alias la='ls -a'
alias ll='ls -al'
alias ls='ls -G'
alias syn='/Applications/Synergy.app/Contents/MacOS/Synergy & exit'
alias t='rails test'
alias v='mvim'

# confirm and delete files created after using git mergetool
alias delorig='find . -name *.orig | xargs -pL1 rm'

## directory traversal
alias ..='cd ..'
alias ...='cd ../..'
